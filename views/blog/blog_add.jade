extends blog_content_layout
block leftContent
    link(rel='stylesheet', href='/library/font-awesome/3.2.1/css/font-awesome.css')
    script(src="/library/jquery/jquery.hotkeys.js")
    script(src='/library/bootstrap-wysiwyg/bootstrap-wysiwyg.js')
    script(src='/javascripts/blogAdd.js')
    p
    a(href='home') 主页
    span &nbsp;&nbsp;/&nbsp;&nbsp;
    a(href='add') 发表博客

    form(action='addBlog',method='post',onsubmit="return blogAddSubmit()",name='addBlog')
        input(type='hidden',name='content')
        p
        div.input-group
            span.input-group-addon 标题
            input(class='form-control',type='text',placeholder='请输入标题',required='',autofocus='',name='title')
        p
        div.input-group
            span.input-group-addon 摘要
            textarea(class='form-control',type='text',placeholder='请输入博客摘要',required='',autofocus='',name='abstract')
        p
        include ../util/bootstrap_wysiwyg
        p
        button(type='submit',name='sub')
block rightContent
    button(class='btn btn-primary',style='width:200px;float: right;',onclick='javascript:document.addBlog.sub.click()')
        span.glyphicon.glyphicon-ok
        &nbsp;&nbsp;发布